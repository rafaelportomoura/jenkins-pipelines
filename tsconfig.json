{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "app/src/declarations"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": ["*.ts", "*.d.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "ts-node": {
    "files": true
  }
}
